<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="104dp"
            android:layout_height="55dp"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="170dp"
            android:layout_marginRight="170dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Score"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/point"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginEnd="179dp"
            android:layout_marginRight="179dp"
            android:text="000"
            android:textSize="46sp"
            app:layout_constraintBottom_toTopOf="@+id/replay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/replay"
            android:layout_width="128dp"
            android:layout_height="69dp"
            android:layout_marginBottom="190dp"
            android:text="Rejouer"
            app:backgroundTint="#FF5722"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/returnM"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/returnM"
            android:layout_width="128dp"
            android:layout_height="69dp"
            android:layout_marginBottom="190dp"
            android:text="Menu principal"
            app:backgroundTint="#FF5722"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/replay" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>